<h3>{{viewTitle}}</h3>

<form action="/stores" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{store._id}}">

    <div class="form-group">

        <label>Store Name</label>

        <input type="text" class="form-control" name="storeName" placeholder="Store Name" value="{{store.storeName}}">

    </div>

    <div class="form-group">

        <label>Address</label>

        <input type="text" class="form-control" name="address" placeholder="Address" value="{{store.address}}">

    </div>

    <div class="form-row">

        <div class="form-group col-md-6">

            <label>Location</label>

            <input type="text" class="form-control" name="location" placeholder="Location (Separete Lng & Lat with a comma)" value="{{store.location}}">

        </div>

        <div class="form-group col-md-6">

            <label>Opening Hours</label>

            <input type="text" class="form-control" name="openingHours" placeholder="Opening Hours" value="{{store.openingHours}}">

        </div>

    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-info">Submit</button>

        <a class="btn btn-secondary" href="/stores">View All</a>

    </div>

</form>

