<h3>{{viewTitle}}</h3>

<form action="/stores/nearme" method="POST" autocomplete="off">

    <div class="form-row">

        <div class="form-group col-md-6">

            <label>Location</label>

            <input type="text" class="form-control" name="location" placeholder="Location (Separete Lng & Lat with a comma)" value="{{store.location}}">

        </div>

    </div>

    <div class="form-group">

        <button type="submit" class="btn btn-info">Submit</button>

        <a class="btn btn-secondary" href="/stores">View All</a>

    </div>

</form>

